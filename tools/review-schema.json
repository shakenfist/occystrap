{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://shakenfist.com/occystrap/review-schema.json",
  "title": "PR Review Output",
  "description": "Structured output from the automated PR reviewer",
  "type": "object",
  "required": ["summary", "items"],
  "properties": {
    "summary": {
      "type": "string",
      "description": "Brief summary of what the PR does (1-3 sentences)"
    },
    "items": {
      "type": "array",
      "description": "List of review items (issues, suggestions, observations)",
      "items": {
        "type": "object",
        "required": ["id", "title", "category", "action"],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique item number within this review"
          },
          "title": {
            "type": "string",
            "description": "Short title describing the item"
          },
          "category": {
            "type": "string",
            "enum": ["security", "bug", "performance", "documentation", "style", "testing", "other"],
            "description": "Category of the item"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"],
            "description": "Severity level (required for action=fix)"
          },
          "action": {
            "type": "string",
            "enum": ["fix", "document", "consider", "none"],
            "description": "Required action: fix=must fix, document=add docs, consider=optional, none=informational"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the issue or observation"
          },
          "location": {
            "type": "string",
            "description": "File path and line numbers (e.g., 'occystrap/main.py:100-150')"
          },
          "suggestion": {
            "type": "string",
            "description": "Specific suggestion for how to address the item"
          },
          "rationale": {
            "type": "string",
            "description": "For action=none or action=consider, explain why"
          }
        }
      }
    },
    "positive_feedback": {
      "type": "array",
      "description": "List of things done well in the PR",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title for the positive item"
          },
          "description": {
            "type": "string",
            "description": "What was done well and why it's good"
          }
        }
      }
    },
    "test_coverage": {
      "type": "object",
      "description": "Assessment of test coverage",
      "properties": {
        "adequate": {
          "type": "boolean",
          "description": "Whether test coverage is adequate"
        },
        "missing": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of missing test scenarios"
        }
      }
    }
  }
}
